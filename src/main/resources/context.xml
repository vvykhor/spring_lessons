<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="Car" class="Car">
        <constructor-arg ref="PirelliWheel" index="0"/>
        <constructor-arg ref="EngineV12" index="1"/>
    </bean>

    <bean id="ColoredCar" class="Car">
        <constructor-arg value="red"/>

        <property name="Wheel" ref="PirelliWheel"/>
        <property name="Engine" ref="EngineV6"/>
    </bean>

    <bean id="PirelliWheel" class="components.impl.Pirelli"/>
    <bean id="EngineV6" class="components.impl.EngineV6"/>
    <bean id="EngineV12" class="components.impl.EngineV12"/>
</beans>